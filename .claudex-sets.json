{
  "$schema": "https://claudex.space/schemas/sets/v1.json",
  "name": "ai-agents",
  "version": "1.0.0",
  "description": "Claude Code 全局配置集合：CLAUDE.md、Rules、Skills、MCP",
  "author": "StringKe",
  "homepage": "https://github.com/StringKe/ai-agents",
  "license": "MIT",
  "components": {
    "claude_md": {
      "path": "CLAUDE.md"
    },
    "rules": [
      {
        "name": "sdlc-workflow",
        "path": "rules/sdlc-workflow.md",
        "description": "六阶段 SDLC 工作流规范"
      }
    ],
    "skills": [
      {
        "name": "done",
        "path": "skills/done",
        "description": "会话知识整理到 ~/docs/"
      },
      {
        "name": "sdlc-workflow",
        "path": "skills/sdlc-workflow",
        "description": "按需触发 SDLC 工作流"
      }
    ],
    "mcp_servers": [
      {
        "name": "context7",
        "type": "http",
        "url": "https://mcp.context7.com/mcp",
        "headers": {
          "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
        },
        "description": "框架/库官方文档查询"
      },
      {
        "name": "gh_grep",
        "type": "http",
        "url": "https://mcp.grep.app",
        "description": "GitHub 代码搜索"
      },
      {
        "name": "perplexity",
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@perplexity-ai/mcp-server"],
        "env": {
          "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
        },
        "description": "实时联网搜索"
      },
      {
        "name": "qmd",
        "type": "stdio",
        "command": "qmd",
        "args": ["mcp"],
        "description": "本地 Markdown 知识库"
      }
    ]
  },
  "env": [
    {
      "name": "CONTEXT7_API_KEY",
      "description": "Context7 API Key (申请: https://context7.com)",
      "required": false
    },
    {
      "name": "PERPLEXITY_API_KEY",
      "description": "Perplexity API Key (申请: https://www.perplexity.ai/settings/api)",
      "required": false
    }
  ]
}
