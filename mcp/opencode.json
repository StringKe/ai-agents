{
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "perplexity": {
      "type": "local",
      "command": ["npx", "-y", "@perplexity-ai/mcp-server"],
      "environment": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "qmd": {
      "type": "local",
      "command": ["qmd", "mcp"]
    },
    "nowledge-mem": {
      "type": "remote",
      "url": "http://127.0.0.1:${NOWLEDGE_MEM_PORT}/mcp",
      "headers": {
        "APP": "OpenCode"
      }
    }
  }
}
