{
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "gh_grep": {
      "type": "http",
      "url": "https://mcp.grep.app"
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@perplexity-ai/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "qmd": {
      "command": "qmd",
      "args": ["mcp"]
    },
    "nowledge-mem": {
      "type": "streamableHttp",
      "url": "http://127.0.0.1:${NOWLEDGE_MEM_PORT}/mcp",
      "headers": {
        "APP": "Claude Code"
      }
    }
  }
}
